{
   "version": "0.2.0",
   "configurations": [
      {
         "name": "Test",
         "type": "node",
         "request": "launch",
         "program": "${workspaceRoot}/dist/cmd.js",
         "cwd": "${workspaceRoot}"
      },
      {
         "name": "CLI",
         "type": "node",
         "request": "launch",
         "program": "${workspaceRoot}/node_modules/.bin/mocha",
         "env": {
            "TS_NODE_COMPILER_OPTIONS": "{\"module\": \"commonjs\", \"target\": \"es5\"}"
         },
         "args": [
            "--require",
            "ts-node/register",
            "--require",
            "ignore-styles",
            "--require",
            "tsconfig-paths/register",
            "./src/*.test.ts*"
         ]
      }
   ]
}