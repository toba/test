{
   "version": "2.0.0",
   "tasks": [
      {
         "label": "Test",
         "presentation": {
            "showReuseMessage": false,
            "clear": true
         },
         "command": "./node_modules/.bin/jest",
         "args": ["--verbose"],
         "type": "shell",
         "group": "test",
         "problemMatcher": []
      },
      {
         "label": "Build Helpers",
         "presentation": {
            "clear": true
         },
         "command": "./node_modules/.bin/tsc",
         "args": ["--project", "tsconfig.build.json"],
         "type": "shell",
         "group": "build",
         "problemMatcher": ["$tsc"]
      },
      {
         "label": "Build Config",
         "presentation": {
            "clear": true
         },
         "command": "./node_modules/.bin/tsc",
         "args": ["--project", "./src/config/tsconfig.json"],
         "type": "shell",
         "group": "build",
         "problemMatcher": ["$tsc"]
      },
      {
         "label": "Build Scripts",
         "presentation": {
            "clear": true
         },
         "command": "./node_modules/.bin/tsc",
         "args": ["--project", "./src/scripts/tsconfig.json"],
         "type": "shell",
         "group": "build",
         "problemMatcher": ["$tsc"]
      },
      {
         "label": "Publish",
         "command": "npm",
         "args": ["publish"],
         "type": "shell",
         "group": "none",
         "problemMatcher": []
      }
   ]
}
