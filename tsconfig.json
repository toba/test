{
   "compilerOptions": {
      "target": "es5",
      "module": "es2015",
      "newLine": "LF",
      "noImplicitAny": true,
      "noImplicitThis": true,
      // cannot be true because that blocks mocha, React and others
      "noUnusedLocals": false,
      "noUnusedParameters": false,
      "outDir": "./dist",
      "sourceMap": true,
      "allowJs": false,
      "removeComments": true,
      "alwaysStrict": true,
      "strictNullChecks": false,
      "skipLibCheck": true,
      "allowSyntheticDefaultImports": false,
      "forceConsistentCasingInFileNames": true,
      "lib": [
         "dom",
         "es2015"
      ],
      "typeRoots": [
         "./node_modules/@types",
         "./src/types"
      ],
      "baseUrl": "."
   },
   "include": [
      "./src/**/*.ts"
   ],
   "exclude": [
      "./src/types/",
      "./node_modules/"
   ]
}